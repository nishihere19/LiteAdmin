extends layout
.nav
  block nav
      ul.main-menu
        li
          a(href='/') Home
        li
          a(href='/showdb') My Databases
block form 
  form(action="/createCol", method="post")
    input(type="text" name="table" value=table style="display: none;")
    input(type="text" name="no_of_col" value=no_of_col style="display: none;")
    input(type="text" name="db" value=db style="display: none;")
    each item in number
      table
        tr  
          td(style="float: left;")
            label Name Of Column
            input(type="text" name=item+"name" placeholder="name of column")
        tr
          td(style="float: left;")
            label Foreign Key(Optional)
            input(type="text" name=item+"table" placeholder="Name of Table")
        tr
          td(style="float: left;")
            label Name of Column(Foreign Key)
            input(type="text" name=item+"col" placeholder="Name of Column")
        tr
          td(style="float: left;")
            label(for=item+"checkbox_unique") unique
            input(type="checkbox" name=item+"checkbox_unique")
    input(type="submit" name="submit" value="Submit" style="float: left")

        
